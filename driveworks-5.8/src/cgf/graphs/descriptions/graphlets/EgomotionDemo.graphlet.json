{
    "$schema": "../../../../../../doc/3-drive-works-infra/7-基于json的cgf设计/graphlet.schema.json",
    "name": "EgomotionDemo",
    "inputPorts": {
        "IMU_FRAME": {
            "type": "dwIMUFrame"
        },
        "VEHICLE_STATE": {
            "type": "dwVehicleIOState"
        },
        "WHEEL_RADII": {
            "type": "dwCalibratedWheelRadii"
        },
        "VEHICLE_STATE_ODOMETRY_ONLY": {
            "type": "dwVehicleIOState"
        },
        "IMU_EXTRINSICS": {
            "type": "dwSensorNodeProperties"
        }
    },
    "outputPorts": {
        "EGOMOTION_STATE": {
            "type": "dwEgomotionStateHandle_t"
        },
        "ODOMETRY_ONLY_EGOMOTION_STATE": {
            "type": "dwEgomotionStateHandle_t"
        },
        "TRANSFORMATION_PAYLOAD": {
            "type": "dwTransformation3fPayload"
        },
        "EGOMOTION_RESULT_PAYLOAD": {
            "type": "dwEgomotionResultPayload"
        }
    },
    "parameters": {
        "enableSuspension": { "type": "bool", "default": true },
        "speedMeasurementType": { "type": "dwEgomotionSpeedMeasurementType", "default": "DW_EGOMOTION_REAR_WHEEL_SPEED" },
        "motionModel": { "type": "dwMotionModel", "default": "DW_EGOMOTION_IMU_ODOMETRY" },
        "estimateInitialOrientation": { "type": "bool", "default": false },
        "automaticUpdate": { "type": "bool", "default": true },
        "historySize": { "type": "uint32_t", "default": 1000 },
        "linearAccelerationFilterMode": { "type": "dwEgomotionLinearAccelerationFilterMode", "default": "DW_EGOMOTION_ACC_FILTER_SIMPLE" },
        "linearAccelerationFilterTimeConst": { "type": "float32_t", "default": 0.1 },
        "linearAccelerationFilterProcessNoiseStdevSpeed": { "type": "float32_t", "default": 0.1 },
        "linearAccelerationFilterProcessNoiseStdevAcceleration": { "type": "float32_t", "default": 1.0 },
        "linearAccelerationFilterMeasurementNoiseStdevSpeed": { "type": "float32_t", "default": 0.1 },
        "linearAccelerationFilterMeasurementNoiseStdevAcceleration": { "type": "float32_t", "default": 0.384 }
    },
    "subcomponents": {
        "relativeEgomotionNode": {
            "componentType": "../../../../../src/dwframework/dwnodes/egomotion/dwrelativeegomotionimunode/dwRelativeEgomotionIMUNode.node.json",
            "parameters": {
                "*": "$*"
            }
        },
        "odometryOnlyEgomotionNode": {
            "componentType": "../../../../../src/dwframework/dwnodes/egomotion/dwrelativeegomotionimunode/dwRelativeEgomotionIMUNode.node.json",
            "parameters": {
                "*": "$*",
                "motionModel": "DW_EGOMOTION_ODOMETRY",
                "historySize": 100
            }
        }
    },
    "connections": [
        {
            "src": "relativeEgomotionNode.EGOMOTION_STATE",
            "dests": {"EGOMOTION_STATE": {}}
        },
        {
            "src": "relativeEgomotionNode.TRANSFORMATION_PAYLOAD",
            "dests": {"TRANSFORMATION_PAYLOAD": {}}
        },
        {
            "src": "relativeEgomotionNode.EGOMOTION_RESULT_PAYLOAD",
            "dests": {"EGOMOTION_RESULT_PAYLOAD": {}}
        },
        {
            "src": "odometryOnlyEgomotionNode.EGOMOTION_STATE",
            "dests": {"ODOMETRY_ONLY_EGOMOTION_STATE": {}}
        },
        {
            "src": "IMU_FRAME",
            "dests": {"relativeEgomotionNode.IMU_FRAME": {}}
        },
        {
            "src": "VEHICLE_STATE",
            "dests": {"relativeEgomotionNode.VEHICLE_STATE": {}}
        },
        {
            "src": "WHEEL_RADII",
            "dests": {"relativeEgomotionNode.WHEEL_RADII": {}}
        },
        {
            "src": "VEHICLE_STATE_ODOMETRY_ONLY",
            "dests": {"odometryOnlyEgomotionNode.VEHICLE_STATE": {}}
        },
        {
            "src": "IMU_EXTRINSICS",
            "dests": {"relativeEgomotionNode.IMU_EXTRINSICS": {}}
        }
    ]
}
